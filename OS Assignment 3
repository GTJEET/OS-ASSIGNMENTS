#include<iostream>
 
using namespace std;
 
int main()
{
    int n,bt[35],wt[35],tat[35],avgwt=0,avgtat=0,i,j;
    cout<<"Enter total number of processes (maximum of 35): ";   //helps to input the number of processes
    cin>>n;
 
    cout<<"\nEnter Process Burst Time (BT)\n";
    for(i=0;i<n;i++)
    {
        cout<<"Process Number "<< i+1 <<" : ";
        cin>>bt[i];
    }
 
    wt[0]=0;    
 
    for(i=1;i<n;i++)
    {
        wt[i]=0;
        for(j=0;j<i;j++)
            wt[i]+=bt[j];
    }
    
    cout << "\nBT = Burst Time";
    cout << "\nWT = Waiting Time";
    cout << "\nTAT = Total Turnaround Time\n\n";
    cout<<"\nProcess\t\t\t\tBT \t\tWT\t       TAT";
 
    for(i=0;i<n;i++)
    {
        tat[i]=bt[i]+wt[i];
        avgwt+=wt[i];
        avgtat+=tat[i];
        cout<<"\nProcess number "<< i+1 << "\t\t" << bt[i] << "\t\t" << wt[i] << "\t\t" <<tat[i];
    }
 
    avgwt/=i;
    avgtat/=i;
    cout<<"\n\nAverage WT : "<< avgwt;
    cout<<"\nAverage TAT :"<< avgtat;
 
    return 0;
}
