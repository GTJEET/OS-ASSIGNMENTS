#include<iostream>
 
using namespace std;
 
int main()
{
    float n, at[35], bt[35], wt[35], tat[35], ct[35], avgwt=0, avgtat=0;
    int i,j;
    
    
    
    cout<<"Enter total number of processes (maximum of 35): ";   //helps to input the number of processes
    cin>>n;
 
    cout<<"\nEnter Process Burst Time (BT)\n";
    for(i=0;i<n;i++)
    {
        cout<<"Process Number "<< i+1 <<" : ";
        cin>>bt[i];
    }
    
    cout << "\nEnter Process Arrival Time (AT)\n";
    for(i=0;i<n;i++)
    {
        cout<<"Process Number "<< i+1 <<" : ";
        cin>>at[i];
    }
    
    wt[0] = 0;    
    ct[0] = bt[0];
    for(i=1;i<n;i++)
    {
        wt[i]=0;
        for(j=0;j<i;j++)
            wt[i]+=bt[j];
    }
    
    cout << "\nBT = Burst Time";
    cout << "\nWT = Waiting Time";
    cout << "\nTAT = Total Turnaround Time\n\n";
    cout<<"\nProcess\t\t\t\tAT \t\tBT \t\tCT \t\tTAT \t\tWT";
 
    for(i=0;i<n;i++)
    {
        ct[i]=bt[i]+wt[i];
        tat[i] = ct[i] - at[i];
        wt[i] = tat[i] - bt[i];
        avgwt+=wt[i];
        avgtat+=tat[i];
        cout<<"\nProcess number "<< i+1 << "\t\t" << at[i] << "\t\t" <<bt[i] << "\t\t" << ct[i] << "\t\t" << tat[i] << "\t\t" << wt[i];
    }
 
    avgwt/=i;
    avgtat/=i;
    cout <<"\n\nAverage WT = "<< avgwt;
    cout <<"\nAverage TAT = "<< avgtat;
    cout << "\n Total WT = " << avgwt*n;
    cout << "\nTotal TAT = " << avgtat*n;
 
    return 0;
}
